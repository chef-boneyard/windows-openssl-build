recipe "ncurses", "5.9" do
  use :autotools

  fetch "http://distfiles.macports.org/#{name}/#{name}-#{version}.tar.gz",
    :md5 => "8cb9c412e5f2d96bc6f459aa8c6282a1"

  before :configure do
    options.configure_args = [
      "--without-debug", "--enable-widec",
      "--enable-term-driver", "--enable-sp-funcs"
    ]

    options.verbose = true
  end
end
